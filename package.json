{
  "name": "svelte-app",
  "version": "1.0.0",
  "scripts": {
    "build": "rm -rf public/build && rollup -c",
    "dev": "run-p autobuild watch:tailwind",
    "autobuild": "rollup -c -w",
    "start": "sirv public",
    "watch:tailwind": "postcss src/tailwind.css -o public/index.css -w",
    "build:tailwind": "postcss src/tailwind.css -o public/index.css",
    "prebuild": "NODE_ENV=production npm run build:tailwind"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.0",
    "@rollup/plugin-node-resolve": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.20.0",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-svelte": "^5.0.3",
    "rollup-plugin-terser": "^5.1.2",
    "svelte": "^3.0.0"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "postcss-cli": "^6.1.3",
    "sirv-cli": "^0.4.4",
    "svelte-awesome": "^2.2.1",
    "tailwindcss": "^1.1.4",
    "uuid": "^3.3.3"
  }
}
